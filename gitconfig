# To use, copy the following to your ~/.gitconfig (adjust the email address as needed)
#
# [include]
#         path = ~/git/dotfiles/gitconfig
#
# [user]
#         email = perlun@gmail.com

[user]
	name = Per Lundberg

[core]
        excludesfile = ~/.gitignore_global
        ignorecase = false
        editor = nano -r 72

[alias]
        addall = add --all
        amend = commit --amend --no-edit
        ci = commit
        co = checkout
        dc = diff --cached
        fetch = fetch --prune --all
        merge = merge --ff-only
        pull = pull -r
        push-branch = push -u origin HEAD
        st = status --short
        st = status -sb
        stat = status
        tree = log --graph --oneline --all --decorate --tags

[push]
        default = simple

[filter "media"]
        clean = git-media-clean %f
        smudge = git-media-smudge %f

[mergetool]
        keepBackup = true
