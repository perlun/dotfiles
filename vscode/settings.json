// Place your settings in this file to overwrite the default settings for Visual Studio Code
{
    // Controls if the editor should automatically close brackets after opening them
    "editor.autoClosingBrackets": false,
    "files.trimTrailingWhitespace": true,
    "editor.codeLens": false,
    "editor.multiCursorModifier": "ctrlCmd",

    // The number of spaces a tab is equal to. This setting is overridden based on the file contents when `editor.detectIndentation` is on.
    "editor.tabSize": 2,
    "editor.rulers": [132],

    "[ruby]": {
        "editor.tabSize": 2
    },

    "files.exclude": {
        "client/tmp/**/*": true,
        "dist/**/*": true,
        "tmp/**/*": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.js.map": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "client/tmp/**/*": true,
        "dist/**/*": true,
        "tmp/**/*": true
    },

    "files.insertFinalNewline": true,

    "window.zoomLevel": 1,

    "editor.formatOnSave": false,
    "gitProjectManager.baseProjectsFolders": [
        "~/git/ecraft",
        "~/git/mio",
        "~/git/spendrups"
    ],
    "gitProjectManager.maxDepthRecursion": 1,

    "trailing-spaces.trimOnSave": true,
    "files.associations": {
      "*.local": "json",
      "*.config": "json",
      "*.src": "json",
      "cli": "ruby",
      "*.appfactory": "json",
      "*.manifest": "json",
      "*.prd": "json"
    },
    "editor.wordWrap": true,
    "cSpell.userWords": [
        "Silverlight",
        "Testem",
        "appfactory",
        "autoinject",
        "babysteps",
        "backend",
        "changelog",
        "couchdb",
        "crontab",
        "ecraft",
        "favourite",
        "fieldops",
        "htmlbars",
        "intellisense",
        "jsonapi",
        "mixins",
        "nginx",
        "passthrough",
        "postgresql",
        "precompile",
        "prepended",
        "qunit",
        "retryable",
        "spendrups",
        "struct",
        "textblock",
        "textblocks",
        "transpiler",
        "unmanaged",
        "uxfactory",
        "virtio",
        "virtualized",
        "workerd"
    ],
    "search.useRipgrep": true,
    "workbench.iconTheme": "file-icons",
    "workbench.colorTheme": "Pastels_on_Dark",
    "workbench.activityBar.visible": true,
    "ruby.rubocop.executePath": "/Users/plundberg/.rvm/gems/ruby-2.4.1/bin/"
}
