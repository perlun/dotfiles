// Place your settings in this file to overwrite the default settings for Visual Studio Code
{
    // Controls if the editor should automatically close brackets after opening
    // them. I generally dislike all forms of "auto-close" features, since they
    // very seldom play well together with the way I expect my editor to work.
    // There are exceptions, but most such implementations are simply too
    // low-quality for my high expectations of software. :-)
    "editor.autoClosingBrackets": "never",
    "editor.autoSurround": "never",
    "editor.autoClosingQuotes": "never",
    "editor.detectIndentation": false,
    "editor.formatOnSave": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "on",

    // The number of spaces a tab is equal to. This setting is overridden based on the file contents when `editor.detectIndentation` is on.
    "editor.tabSize": 4,
    "editor.rulers": [72, 100, 132],

    "editor.suggestSelection": "first",
    "editor.renderWhitespace": "all",

    // Makes sense for Java code, but we use IntellIJ for that. :-)
    "explorer.compactFolders": false,

    // This is a pretty useless feature that we disable.
    "explorer.openEditors.visible": 0,

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "html.autoClosingTags": false,

    "[coffeescript]": {
        "editor.tabSize": 2
    },

    "[gemfile]": {
        "editor.tabSize": 2
    },

    "[handlebars]": {
        "editor.tabSize": 2
    },

    "[html]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.html-language-features"
    },

    "[jinja-yaml]": {
        "editor.tabSize": 2
    },

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[markdown]": {
        "editor.tabSize": 2
    },

    "[mustache]": {
        "editor.tabSize": 2
    },

    "[ruby]": {
        "editor.tabSize": 2
    },

    // Rationale: Postgres COPY data is tab-delimited and can contain a TAB
    // character for an empty "last field" for a row. Trimming trailing white
    // space for such files will break them from being importable by Postgres.
    "[sql]": {
        "files.trimTrailingWhitespace": false
    },

    "[toml]": {
        "editor.tabSize": 2
    },

    "[xml]": {
        "editor.tabSize": 2
    },

    "[yaml]": {
        "editor.tabSize": 2
    },

    "files.exclude": {
        "client/tmp/**/*": true,
        "dist/**/*": true,
        "tmp/**/*": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.js.map": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "client/tmp/**/*": true,
        "dist/**/*": true,
        "tmp/**/*": true
    },

    "files.associations": {
        ".ember-cli": "jsonc",
        ".env.*": "dotenv",
        "*.appfactory": "json",
        "*.local": "jsonc",
        "*.manifest": "jsonc",
        "*.prd": "json",
        "addon.config": "jsonc",
        "app.config*": "jsonc",
        "cli": "ruby",
        "Dockerfile*": "dockerfile",
        "workerd.*": "erb",
        "workerd.rb": "ruby",
        "profile": "shellscript",
        "bashrc": "shellscript",
        "bash_aliases": "shellscript",
        "bash_profile": "shellscript",
        ".yamllint": "yaml",
        ".ansible-lint": "yaml",
        "*_hosts": "ini",
        "tomcat8": "shellscript",
        "*.partial": "mustache",
        ".profile_secrets": "shellscript",
        "*.j2": "jinja-nginx"
    },

