// Place your settings in this file to overwrite the default settings for Visual Studio Code
{
    // Controls if the editor should automatically close brackets after opening them
    "editor.autoClosingBrackets": false,
    "files.trimTrailingWhitespace": true,
    "editor.codeLens": false,

    // The number of spaces a tab is equal to. This setting is overriden based on the file contents when `editor.detectIndentation` is on.
    "editor.tabSize": 2,
    "editor.rulers": [132],

    "[ruby]": {
        "editor.tabSize": 2
    },

    "files.exclude": {
        "client/tmp/**/*": true,
        "tmp/**/*": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.js.map": true
    },
    "files.insertFinalNewline": true,

    "window.zoomLevel": 1,

    "editor.formatOnSave": false,
    "gitProjectManager.baseProjectsFolders": [
        "~/git/ecraft",
        "~/git/mio",
        "~/git/spendrups"
    ],
    "gitProjectManager.maxDepthRecursion": 1,

    "trailing-spaces.trimOnSave": true,
    "files.associations": {
      "*.local": "json",
      "*.config": "json",
      "*.src": "json",
      "cli": "ruby",
      "*.appfactory": "json",
      "*.manifest": "json",
      "*.prd": "json"
    },
    "editor.wordWrap": true,
    "cSpell.userWords": [
      "virtualized",
      "babysteps",
      "favourite",
      "virtio",
      "struct",
      "changelog",
      "Silverlight",
      "uxfactory",
      "backend",
      "fieldops",
      "nginx",
      "ecraft",
      "spendrups",
      "appfactory",
      "workerd",
      "prepended",
      "crontab",
      "passthrough",
      "Testem",
      "mixins",
      "jsonapi",
      "Postgres",
      "Gemfile",
      "JDBC",
      "htmlbars",
      "qunit",
      "precompile"
    ],
    "search.useRipgrep": true,
    "workbench.iconTheme": "file-icons",
    "workbench.colorTheme": "Pastels_on_Dark"
}
