// Place your settings in this file to overwrite the default settings for Visual Studio Code
{
    // Controls if the editor should automatically close brackets after opening them
    "editor.autoClosingBrackets": false,
    "files.trimTrailingWhitespace": true,
    "editor.codeLens": false,
    "editor.formatOnSave": false,
    "editor.multiCursorModifier": "ctrlCmd",

    // The number of spaces a tab is equal to. This setting is overridden based on the file contents when `editor.detectIndentation` is on.
    "editor.tabSize": 2,
    "editor.rulers": [75, 132],

    "html.autoClosingTags": false,

    "[ruby]": {
        "editor.tabSize": 2
    },
    "[c]": {
        "editor.tabSize": 4
    },
    "[csharp]": {
        "editor.tabSize": 4
    },

    "[typescript]": {
        "editor.tabSize": 4
    },

    "files.exclude": {
        "client/tmp/**/*": true,
        "dist/**/*": true,
        "tmp/**/*": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.js.map": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "client/tmp/**/*": true,
        "dist/**/*": true,
        "tmp/**/*": true
    },

    "files.insertFinalNewline": true,

    "window.zoomLevel": 1,

    "gitlens.currentLine.enabled": false,

    "haskell.ghcMod.executablePath": "~/Library/Haskell/bin/ghc-mod",

    "trailing-spaces.trimOnSave": true,
    "files.associations": {
      "*.local": "json",
      "*.config": "json",
      "*.src": "json",
      "cli": "ruby",
      "*.appfactory": "json",
      "*.manifest": "json",
      "*.prd": "json"
    },
    "editor.wordWrap": true,
    "cSpell.userWords": [
        "Arcieri",
        "Gemfile",
        "JDBC",
        "Lundberg",
        "MSYS",
        "Matz",
        "NOTIME",
        "Npgsql",
        "Owin",
        "Postgre",
        "Postgres",
        "Silverlight",
        "Testem",
        "Uncomment",
        "appfactory",
        "autoinject",
        "babysteps",
        "backend",
        "changelog",
        "couchdb",
        "crontab",
        "deallocation",
        "dylib",
        "ecraft",
        "favourite",
        "fieldops",
        "getpid",
        "htmlbars",
        "intellisense",
        "jsonapi",
        "mixins",
        "mutex",
        "nginx",
        "pacman",
        "passthrough",
        "postgresql",
        "precompile",
        "prepended",
        "qunit",
        "retryable",
        "spendrups",
        "struct",
        "textblock",
        "textblocks",
        "transpiler",
        "trello",
        "uncommented",
        "unmanaged",
        "uxfactory",
        "virtio",
        "virtualized",
        "workerd"
    ],
    "search.useRipgrep": true,
    "workbench.iconTheme": "file-icons",
    "workbench.activityBar.visible": true,
    "ruby.rubocop.executePath": "bin/",
    "editor.renderWhitespace": "all",
    "[java]": {
    },
    "C_Cpp.intelliSenseEngine": "Default",
    "workbench.colorTheme": "Hopscotch",
    "workbench.editor.showTabs": true,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": true,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false
    }
}
